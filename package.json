{
  "name": "xcm-sdk",
  "author": "PureStake",
  "license": "MIT",
  "private": true,
  "homepage": "https://docs.moonbeam.network/builders/xcm/xcm-sdk/xcm-sdk/",
  "bugs": {
    "url": "https://github.com/PureStake/xcm-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureStake/xcm-sdk.git"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "link": "turbo run link",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:update": "turbo run test:update",
    "test:ci": "turbo run test:ci",
    "test:acc": "turbo run test:acc",
    "prepare": "husky install",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm i --package-lock-only",
    "changeset:publish": "npm run build && changeset publish"
  },
  "dependencies": {
    "@polkadot/api": "^10.10.1",
    "@polkadot/api-augment": "^10.10.1",
    "@polkadot/types": "^10.10.1",
    "@polkadot/util": "^12.5.1",
    "@polkadot/util-crypto": "^12.5.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bun": "^1.0.21",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.2",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^6.7.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "viem": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix --max-warnings=0",
    "*.{json,md}": "prettier --write"
  }
}
