{
  "author": "PureStake",
  "license": "GPL-3.0-only",
  "private": true,
  "homepage": "https://github.com/PureStake/xcm#readme",
  "bugs": {
    "url": "https://github.com/PureStake/xcm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureStake/xcm.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "rimraf packages/**/build",
    "build": "tsc -b -verbose",
    "postbuild": "node scripts/postbuild.mjs",
    "lint": "eslint 'packages' --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "jest -w",
    "test:update": "jest -u",
    "link": "npm run build && cd packages/config && npm ln && cd ../sdk && npm ln @moonbeam-network/xcm-config && npm ln",
    "prepare": "husky install"
  },
  "dependencies": {
    "@moonbeam-network/api-augment": "^0.1700.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix --max-warnings=0",
    "*.{json,md}": "prettier --write"
  }
}
