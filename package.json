{
  "author": "PureStake",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/PureStake/xcm-sdk#readme",
  "bugs": {
    "url": "https://github.com/PureStake/xcm-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureStake/xcm-sdk.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "rimraf packages/**/build",
    "build": "tsc -b -verbose",
    "postbuild": "node scripts/postbuild.mjs",
    "lint": "eslint 'packages' --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest ./packages/**/src",
    "test:watch": "npm test -- --watch",
    "test:update": "npm test -- -u",
    "test:acc": "jest --forceExit ./packages/**/tests/acceptance",
    "link": "npm run build && cd packages/config && npm ln && cd ../sdk && npm ln @moonbeam-network/xcm-config && npm ln",
    "prepare": "husky install"
  },
  "dependencies": {
    "@moonbeam-network/api-augment": "^0.1801.0"
  },
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix --max-warnings=0",
    "*.{json,md}": "prettier --write"
  }
}
