{
  "extends": ["airbnb-base", "airbnb-typescript/base", "prettier"],
  "plugins": [
    // this should be last
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "ignorePatterns": ["packages/**/build"],
  "rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off",
    "import/no-default-export": "error"
  }
}
