{
  "name": "@moonbeam-network/xcm-builder",
  "version": "1.0.8",
  "description": "Moonbeam XCM builder",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "link": "npm ln",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest /src",
    "test:watch": "npm test -- --watch",
    "test:update": "npm test -- -u",
    "test:ci": "npm test -- --ci",
    "prepack": "prettier --write build/index.d.ts"
  },
  "repository": {
    "directory": "packages/builder",
    "type": "git",
    "url": "git+https://github.com/PureStake/xcm-sdk.git"
  },
  "keywords": [
    "moonbeam",
    "moonriver",
    "xcm"
  ],
  "author": "PureStake",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PureStake/xcm-sdk/issues"
  },
  "homepage": "https://docs.moonbeam.network/builders/xcm/xcm-sdk/xcm-sdk/",
  "files": [
    "build"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.ts",
        "default": "./build/index.cjs"
      }
    }
  },
  "types": "./build/index.d.ts",
  "main": "./build/index.cjs",
  "dependencies": {
    "@moonbeam-network/xcm-types": "1.0.1",
    "@moonbeam-network/xcm-utils": "1.0.3",
    "big.js": "^6.2.1",
    "type-fest": "^3.8.0"
  },
  "peerDependencies": {
    "@polkadot/api": "^10.10.1",
    "@polkadot/api-augment": "^10.10.1",
    "@polkadot/types": "^10.10.1",
    "@polkadot/util": "^12.5.1",
    "@polkadot/util-crypto": "^12.5.1"
  }
}
