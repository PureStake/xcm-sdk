{
  "name": "@moonbeam-network/xcm-sdk",
  "version": "1.0.2",
  "description": "The Moonbeam XCM SDK enables developers to easily deposit and withdraw assets to Moonbeam/Moonriver from the relay chain and other parachains in the Polkadot/Kusama ecosystem",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "link": "npm ln",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test:acc": "jest --forceExit --testTimeout 300000 ./tests/acceptance",
    "prepack": "prettier --write build/index.d.ts"
  },
  "author": "PureStake",
  "license": "MIT",
  "repository": {
    "directory": "packages/sdk",
    "type": "git",
    "url": "git+https://github.com/PureStake/xcm-sdk.git"
  },
  "keywords": [
    "moonbeam",
    "moonriver",
    "xcm"
  ],
  "bugs": {
    "url": "https://github.com/PureStake/xcm-sdk/issues"
  },
  "homepage": "https://docs.moonbeam.network/builders/xcm/xcm-sdk/xcm-sdk/",
  "files": [
    "build"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.ts",
        "default": "./build/index.cjs"
      }
    }
  },
  "types": "./build/index.d.ts",
  "main": "./build/index.cjs",
  "dependencies": {
    "@moonbeam-network/xcm-builder": "1.0.2",
    "@moonbeam-network/xcm-config": "1.0.2",
    "@moonbeam-network/xcm-types": "1.0.1",
    "@moonbeam-network/xcm-utils": "1.x",
    "big.js": "^6.2.1"
  },
  "peerDependencies": {
    "@polkadot/api": "^10.8.1",
    "@polkadot/api-augment": "^10.8.1",
    "@polkadot/types": "^10.8.1",
    "@polkadot/util": "^12.2.2",
    "ethers": "^5.7.2"
  }
}
